<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!--
        une autre facon de faire un injection par setter
        injection par  setter  en declarant un namespace
     xmlns:p="http://www.springframework.org/schema/p"
     p pour property
     c pour les constructeurs
     -->

    <!--DAO BEAN-->
    <bean id="formationDao" class="fr.moon.formation.dao.FormationDaoImpl"></bean>
    <!--Service BEAN-->

    <bean id="formationDao" class="fr.moon.formation.dao.FormationDaoImpl"></bean>
    <bean id="serviceImpl" class="fr.moon.formation.service.ServiceFormationImpl"
    p:formationDao-ref="formationDao" p:etablissement="NewYork"
    >

    </bean>

</beans>